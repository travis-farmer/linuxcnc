<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
         <vbox>
         <relief>RIDGE</relief>
         <bd>6</bd>
                <meter>
                    <halpin>"laser-pwm"</halpin>
                    <text>"Laser"</text>
                    <subtext>"PWM"</subtext>
                    <size>200</size>
                    <min_>0</min_>
                    <max_>4096</max_>
                    <majorscale>1000</majorscale>
                    <minorscale>100</minorscale>
                    <region1>(4000,4096,"red")</region1>
                    <region2>(100,4000,"green")</region2>
                    <region3>(0,100,"blue")</region3>
                </meter>
                <label>
                        <text>"Laser Enable:"</text>
                        <font>("Helvetica",20)</font>
                </label>
                <hbox>
                    <label>
                            <text>"             "</text>
                            <font>("Helvetica",20)</font>
                    </label>
                    <led>
                        <halpin>"laser-enable"</halpin>
                        <size>30</size>
                        <on_color>"green"</on_color>
                        <off_color>"red"</off_color>
                    </led>
                </hbox>
                
        </vbox>
</pyvcp>
